{
    "compilerOptions": {
        "module": "ES2022",
        "target": "ES2022",
        "paths": {
            "@client/*": [
                "./foundry/client/*"
            ],
            "@common/*": [
                "./foundry/common/*"
            ]
        },
    },
    "include": [
        "hm.js",
        "modules/**/*",
        "foundry/client/global.d.mts",
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "typeAcquisition": {
        "include": [
            "jquery"
        ]
    }
}
