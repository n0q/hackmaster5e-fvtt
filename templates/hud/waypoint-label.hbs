<div class="waypoint-label {{cssClass}}">
    {{#if action.img}}
        <div class="img" style="background-image: url('{{ action.img }}');"></div>
    {{else if action.icon}}
        <i class="icon {{action.icon}}"></i>
    {{else if action.label}}
        <label class="action-label">{{localize action.label}}</label>
    {{/if}}

    {{#if cost}}
        {{#with cost}}
            {{> "systems/hackmaster5e/templates/hud/waypoint-label-subsection.hbs"
                inCombat=../inCombat movementActionKeyPath=../movementActionKeyPath }}
        {{/with}}
    {{else}}
        {{#with distance}}
            {{> "systems/hackmaster5e/templates/hud/waypoint-label-subsection.hbs"
                inCombat=../inCombat movementActionKeyPath=../movementActionKeyPath }}
        {{/with}}
    {{/if}}

    {{#if (and elevation (not elevation.hidden))}}
        <i class="icon {{elevation.icon}}"></i>
        <span class="total-elevation">{{elevation.total}} {{units}}</span>
        {{#if elevation.delta}}
            <span class="delta-elevation">({{elevation.delta}})</span>
        {{/if}}
    {{/if}}

    {{#if secret}}
        <i class="icon fa-solid fa-eye-slash"></i>
    {{/if}}
</div>
