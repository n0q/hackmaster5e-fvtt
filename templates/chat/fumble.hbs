{{localize 'HM.attack'}}:
<strong>{{resp.atk}}</strong><br>

{{localize 'HM.defense'}}:
<strong>{{resp.def}}</strong>

<hr>

{{localize 'HM.result'}}:
<strong>{{localize mdata.resultString}}</strong><br>

{{#if (lt mdata.typeIdx 10)}}
    {{#if mdata.complication}}
        {{localize 'HM.injury'}}:
        <strong>{{localize mdata.injuryString}}</strong><br>

        {{localize 'HM.location'}}: 
        <strong>{{{localize mdata.labelString}}}</strong><br>
    {{else}}
        {{localize 'HM.details'}}:
        <strong>{{{localize mdata.labelString}}}</strong><br>
    {{/if}}
{{/if}}

{{#if mdata.hasComplication}}
    {{localize 'HM.comp'}}: 
    <strong>{{localize mdata.compString}}</strong><br>
{{/if}}

{{#if mdata.freeAttack}}<hr><strong>{{localize 'HM.chatCard.fcounter'}}</strong>{{/if}}

