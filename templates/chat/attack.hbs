{{localize 'HM.weapon'}}: <b>{{context.name}}</b><br>
{{#unless context.system.ranged.checked}}
{{localize 'HM.reach'}}: <b>{{context.system.reach}}</b> ft.<br>
{{/unless}}
{{localize 'HM.speed'}}:
{{#with context.system.bonus.total}}
    {{#if (eq ../resp.specialMove 1)}}
        {{spd}}(<b>{{jspd}}</b>)<br>
    {{else}}
        <b>{{spd}}</b>{{#if ../context.system.jab.checked}}({{jspd}}){{/if}}<br>
    {{/if}}
{{/with}}
{{#if context.system.ranged.checked}}
    {{localize 'HM.range'}}: <b>{{localize (findConfigValue 'reach' resp.reach)}}</b><br>
{{/if}}
{{#if specialRow}}
<hr><span {{#if shake}}class='hm-shake'{{/if}}><strong>{{specialRow}}</strong></span>
{{/if}}
