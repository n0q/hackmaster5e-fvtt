{{localize 'HM.skill'}}:
<strong>{{mdata.name}}</strong><br>

{{localize 'HM.skillmastery'}}:
<strong>{{mdata.level}}
({{localize (lookup (findConfigObj 'skillMastery') mdata.mastery)}})</strong><br>

{{#if resp.bonus}}
    {{localize 'HM.bonus'}}:
    <strong>{{resp.bonus}}</strong><br>
{{/if}}

{{#unless mdata.isAuto}}
    {{localize 'HM.target'}}:
    <strong>{{localize (lookup (findConfigObj 'skillLevel') resp.dc)}}</strong>
    <br>
{{/unless}}
{{localize 'HM.rolled'}}:
<span data-tooltip="{{roll}}">
    <i class="fa-solid fa-dice"></i> <strong>{{roll.total}}</strong>
</span>

<hr>

{{localize 'HM.opposed'}}:
<strong>{{mdata.opposedResult}}</strong><br>

{{localize 'HM.check'}}:
<strong>{{resultString}}</strong>

<div class="dice-roll">
    <div class="hm-dice-flavor">{{mdata.rollFlavor}}</div>
</div>
